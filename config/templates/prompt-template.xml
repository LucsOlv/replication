<?xml version="1.0" encoding="UTF-8"?>
<prompt version="1.0" name="{{NOME_DO_PROJETO}}">

  <!-- ============================================================
       ROLE PROMPTING
       Defina a persona e especialidades do modelo para esta tarefa.
  ============================================================ -->
  <role>
    <persona>{{DESCRICAO_DA_PERSONA}}</persona>
    <expertise>
      <item>{{ESPECIALIDADE_1}}</item>
      <item>{{ESPECIALIDADE_2}}</item>
      <item>{{ESPECIALIDADE_3}}</item>
      <!-- Adicione quantas especialidades forem necessárias -->
    </expertise>
    <behavior>
      {{DESCRICAO_DO_COMPORTAMENTO_ESPERADO}}
      <!-- Ex: "Você pensa de forma estruturada, documenta cada decisão
           arquitetural e entrega código production-ready..." -->
    </behavior>
  </role>

  <!-- ============================================================
       GENERATED KNOWLEDGE
       Conhecimento que o modelo deve ativar/consolidar antes de responder.
       Use para domínios técnicos onde o modelo precisa de "warm-up".
  ============================================================ -->
  <generated_knowledge>
    <instruction>
      Antes de {{ACAO_PRINCIPAL}}, recupere e consolide internamente
      o seguinte conhecimento:
    </instruction>
    <knowledge_blocks>

      <block id="K1" topic="{{TOPICO_1}}">
        {{DESCRICAO_DO_CONHECIMENTO_1}}
        <!-- Seja denso e direto. Liste APIs, padrões, regras do domínio. -->
      </block>

      <block id="K2" topic="{{TOPICO_2}}">
        {{DESCRICAO_DO_CONHECIMENTO_2}}
      </block>

      <!-- Adicione blocos K3, K4... conforme necessário -->

    </knowledge_blocks>
  </generated_knowledge>

  <!-- ============================================================
       FEW-SHOT EXAMPLES
       Exemplos concretos de entrada → saída esperada.
       Ajuda o modelo a calibrar formato, tom e nível de detalhe.
  ============================================================ -->
  <few_shot_examples>

    <example id="E1" label="{{LABEL_DO_EXEMPLO_1}}">
      <input>
        {{ENTRADA_DO_EXEMPLO_1}}
        <!-- Descreva a situação/input do usuário -->
      </input>
      <output>
        {{SAIDA_ESPERADA_DO_EXEMPLO_1}}
        <!-- Descreva o resultado esperado com precisão -->
      </output>
    </example>

    <example id="E2" label="{{LABEL_DO_EXEMPLO_2}}">
      <input>{{ENTRADA_DO_EXEMPLO_2}}</input>
      <output>{{SAIDA_ESPERADA_DO_EXEMPLO_2}}</output>
    </example>

    <!-- Recomendado: 2 a 5 exemplos cobrindo casos típicos e edge cases -->

  </few_shot_examples>

  <!-- ============================================================
       CHAIN OF THOUGHT
       Força o modelo a raciocinar antes de agir.
       Essencial para tarefas com múltiplas etapas ou dependências.
  ============================================================ -->
  <chain_of_thought>
    <instruction>
      Antes de {{ACAO_PRINCIPAL}}, siga OBRIGATORIAMENTE
      estas etapas de raciocínio e exiba cada uma:
    </instruction>
    <steps>
      <step order="1">
        {{NOME_DO_STEP_1}}: {{DESCRICAO_DO_QUE_FAZER_NO_STEP_1}}
        <!-- Ex: "ANÁLISE DE REQUISITOS: Liste todas as funcionalidades..." -->
      </step>
      <step order="2">
        {{NOME_DO_STEP_2}}: {{DESCRICAO_DO_QUE_FAZER_NO_STEP_2}}
      </step>
      <step order="3">
        {{NOME_DO_STEP_3}}: {{DESCRICAO_DO_QUE_FAZER_NO_STEP_3}}
      </step>
      <!-- Adicione steps até cobrir todo o raciocínio necessário -->
      <step order="N">
        SÓ ENTÃO: {{ACAO_FINAL_APOS_RACIOCINAR}}
      </step>
    </steps>
  </chain_of_thought>

  <!-- ============================================================
       TREE OF THOUGHTS
       Para decisões com múltiplas abordagens válidas.
       O modelo explora, avalia e justifica a escolha antes de agir.
  ============================================================ -->
  <tree_of_thoughts>
    <instruction>
      Para as decisões abaixo, explore 3 abordagens,
      avalie prós/contras de cada uma e escolha a melhor justificando:
    </instruction>
    <decision_points>

      <decision id="D1" question="{{PERGUNTA_DA_DECISAO_1}}">
        <branch id="B1">{{ABORDAGEM_1}}</branch>
        <branch id="B2">{{ABORDAGEM_2}}</branch>
        <branch id="B3">{{ABORDAGEM_3}}</branch>
        <evaluate>{{CRITERIO_DE_AVALIACAO}}</evaluate>
        <!-- Ex: "Qual tem menor complexidade para este escopo?" -->
      </decision>

      <decision id="D2" question="{{PERGUNTA_DA_DECISAO_2}}">
        <branch id="B1">{{ABORDAGEM_1}}</branch>
        <branch id="B2">{{ABORDAGEM_2}}</branch>
        <branch id="B3">{{ABORDAGEM_3}}</branch>
        <evaluate>{{CRITERIO_DE_AVALIACAO}}</evaluate>
      </decision>

    </decision_points>
  </tree_of_thoughts>

  <!-- ============================================================
       SELF-CONSISTENCY
       O modelo gera N versões internamente, compara e entrega a melhor.
       Use para componentes críticos onde qualidade > velocidade.
  ============================================================ -->
  <self_consistency>
    <instruction>
      Para {{COMPONENTE_OU_DECISAO_CRITICA}},
      gere 3 versões distintas internamente. Então compare:
      - {{CRITERIO_DE_COMPARACAO_1}}
      - {{CRITERIO_DE_COMPARACAO_2}}
      - {{CRITERIO_DE_COMPARACAO_3}}
      Entregue SOMENTE a versão vencedora, explicando em 2 linhas por que venceu.
    </instruction>
  </self_consistency>

  <!-- ============================================================
       ReAct — Reasoning + Acting
       Ciclo de raciocínio e ação para tarefas com múltiplos passos
       e dependências de ferramentas, APIs ou informações externas.
  ============================================================ -->
  <react_loop>
    <instruction>
      Para cada tarefa abaixo, execute o ciclo ReAct:
      Thought → Action → Observation → (repita se necessário) → Final Answer
    </instruction>
    <tasks>

      <task id="T1" name="{{NOME_DA_TAREFA_1}}">
        <thought>{{PERGUNTA_DE_RACIOCINIO_INICIAL}}</thought>
        <action>{{PRIMEIRA_ACAO_A_TOMAR}}</action>
        <observation>{{O_QUE_VERIFICAR_APOS_A_ACAO}}</observation>
        <action>{{ACAO_CORRETIVA_SE_NECESSARIO}}</action>
        <final>{{ENTREGAVEL_FINAL_DA_TAREFA}}</final>
      </task>

      <task id="T2" name="{{NOME_DA_TAREFA_2}}">
        <thought>{{PERGUNTA_DE_RACIOCINIO_INICIAL}}</thought>
        <action>{{PRIMEIRA_ACAO_A_TOMAR}}</action>
        <observation>{{O_QUE_VERIFICAR_APOS_A_ACAO}}</observation>
        <final>{{ENTREGAVEL_FINAL_DA_TAREFA}}</final>
      </task>

    </tasks>
  </react_loop>

  <!-- ============================================================
       MAIEUTIC PROMPTING
       O modelo valida cada afirmação do que vai construir.
       Excelente para garantir coerência e evitar contradições.
  ============================================================ -->
  <maieutic_prompting>
    <instruction>
      Antes de finalizar a implementação, responda e valide cada afirmação:
    </instruction>
    <validations>

      <validate claim="{{AFIRMACAO_A_VALIDAR_1}}">
        {{PERGUNTA_DE_VALIDACAO_1}}
        <!-- Ex: "Justifique como X funciona em cenário Y,
             e confirme que Z nunca ocorre." -->
      </validate>

      <validate claim="{{AFIRMACAO_A_VALIDAR_2}}">
        {{PERGUNTA_DE_VALIDACAO_2}}
      </validate>

      <validate claim="{{AFIRMACAO_A_VALIDAR_3}}">
        {{PERGUNTA_DE_VALIDACAO_3}}
      </validate>

    </validations>
  </maieutic_prompting>

  <!-- ============================================================
       TAREFA PRINCIPAL
       O núcleo do que você quer que o modelo construa/entregue.
  ============================================================ -->
  <task>
    <title>{{TITULO_DA_TAREFA}}</title>

    <!-- Estrutura de arquivos esperada (adapte ao seu domínio) -->
    <project_structure>
      <file path="{{CAMINHO_DO_ARQUIVO_1}}">{{DESCRICAO_DO_ARQUIVO_1}}</file>
      <file path="{{CAMINHO_DO_ARQUIVO_2}}">{{DESCRICAO_DO_ARQUIVO_2}}</file>
      <!-- Liste todos os artefatos que o modelo deve produzir -->
    </project_structure>

    <!-- Especificação detalhada de cada componente/módulo/tela -->
    <components_specification>

      <component name="{{NOME_DO_COMPONENTE_1}}">
        {{DESCRICAO_DETALHADA_DO_COMPONENTE_1}}
        <!-- Inclua: responsabilidades, inputs, outputs, comportamento esperado -->
      </component>

      <component name="{{NOME_DO_COMPONENTE_2}}">
        {{DESCRICAO_DETALHADA_DO_COMPONENTE_2}}
      </component>

    </components_specification>

    <!-- Lógica de negócio central que atravessa múltiplos componentes -->
    <core_logic>
      <description>{{DESCRICAO_DA_LOGICA_CENTRAL}}</description>
      <rules>
        <rule>{{REGRA_DE_NEGOCIO_1}}</rule>
        <rule>{{REGRA_DE_NEGOCIO_2}}</rule>
      </rules>
    </core_logic>

  </task>

  <!-- ============================================================
       PADRÃO DE TRATAMENTO DE ERROS
       Defina como o modelo deve tratar falhas em todo o codebase.
       (Adapte à linguagem/paradigma do seu projeto)
  ============================================================ -->
  <error_handling_pattern>
    <philosophy>
      {{FILOSOFIA_DE_ERROS}}
      <!-- Ex: "Erros são valores, não exceções. Todo erro é explícito
           e tratado pelo chamador. Nenhum erro é silenciado." -->
    </philosophy>

    <rules>
      <rule id="ERR1">{{REGRA_DE_ERRO_1}}</rule>
      <rule id="ERR2">{{REGRA_DE_ERRO_2}}</rule>
      <rule id="ERR3">{{REGRA_DE_ERRO_3}}</rule>
    </rules>

    <few_shot_error_examples>
      <example label="{{LABEL_DO_EXEMPLO}}">
        <before comment="PROIBIDO — {{MOTIVO}}">
          {{CODIGO_INCORRETO}}
        </before>
        <after comment="CORRETO — {{MOTIVO}}">
          {{CODIGO_CORRETO}}
        </after>
      </example>
    </few_shot_error_examples>

    <validation>
      {{INSTRUCAO_DE_VALIDACAO_DO_PADRAO}}
      <!-- Ex: "Confirme: em nenhum serviço existe throw ou try/catch avulso." -->
    </validation>
  </error_handling_pattern>

  <!-- ============================================================
       CONSTRAINTS — REGRAS INEGOCIÁVEIS
       Tudo que o modelo NÃO pode fazer ou DEVE garantir.
  ============================================================ -->
  <constraints>
    <rule>{{CONSTRAINT_1}}</rule>
    <rule>{{CONSTRAINT_2}}</rule>
    <rule>{{CONSTRAINT_3}}</rule>
    <!-- Seja específico. Constraints vagos são ignorados. -->
  </constraints>

  <!-- ============================================================
       OUTPUT ESPERADO
       Deixe claro o formato, qualidade e critérios de aceite.
  ============================================================ -->
  <expected_output>
    <format>
      {{DESCRICAO_DO_FORMATO_DE_ENTREGA}}
      <!-- Ex: "Entregue todos os arquivos completos e funcionais,
           prontos para executar com: bun install && bun run src/index.tsx" -->
    </format>
    <quality_bar>
      - {{CRITERIO_DE_QUALIDADE_1}}
      - {{CRITERIO_DE_QUALIDADE_2}}
      - {{CRITERIO_DE_QUALIDADE_3}}
      <!-- Liste os critérios mínimos para o output ser aceito -->
    </quality_bar>
  </expected_output>

</prompt>
